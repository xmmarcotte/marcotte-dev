# ============================================================================
# Oracle Cloud Infrastructure (OCI) API Credentials
# ============================================================================
OCI_TENANCY_OCID=ocid1.tenancy.oc1..your_tenancy_ocid
OCI_USER_OCID=ocid1.user.oc1..your_user_ocid
OCI_FINGERPRINT=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx
OCI_PRIVATE_KEY_PATH=/path/to/.oci/oci_api_key.pem
OCI_COMPARTMENT_OCID=ocid1.tenancy.oc1..your_compartment_ocid
OCI_REGION=us-ashburn-1

# OCI Console Login (for web interface)
OCI_USERNAME=your_username
OCI_CONSOLE_URL=https://cloud.oracle.com

# ============================================================================
# Instance Details
# ============================================================================
INSTANCE_NAME=your-instance-name
INSTANCE_OCID=ocid1.instance.oc1.iad.your_instance_ocid
INSTANCE_PUBLIC_IP=xxx.xxx.xxx.xxx
INSTANCE_TAILSCALE_IP=100.x.x.x
INSTANCE_PRIVATE_IP=10.0.1.x
INSTANCE_SHAPE=VM.Standard.A1.Flex
INSTANCE_OCPU=4
INSTANCE_MEMORY_GB=24
INSTANCE_REGION=us-ashburn-1
INSTANCE_AD=YcLT:US-ASHBURN-AD-1

# ============================================================================
# VCN Resources (OCIDs)
# ============================================================================
VCN_OCID=ocid1.vcn.oc1.iad.your_vcn_ocid
VCN_NAME=your-vcn-name
VCN_CIDR=10.0.0.0/16

SUBNET_OCID=ocid1.subnet.oc1.iad.your_subnet_ocid
SUBNET_NAME=your-subnet-name
SUBNET_CIDR=10.0.1.0/24

IGW_OCID=ocid1.internetgateway.oc1.iad.your_igw_ocid
IGW_NAME=your-igw-name

ROUTE_TABLE_OCID=ocid1.routetable.oc1.iad.your_route_table_ocid
ROUTE_TABLE_NAME=Default Route Table for your-vcn

SECURITY_LIST_OCID=ocid1.securitylist.oc1.iad.your_security_list_ocid
SECURITY_LIST_NAME=Default Security List for your-vcn

# ============================================================================
# SSH Keys
# ============================================================================
SSH_PRIVATE_KEY_PATH=/path/to/.ssh/id_rsa
SSH_PUBLIC_KEY_PATH=/path/to/.ssh/id_rsa.pub
SSH_PUBLIC_KEY="ssh-rsa AAAA...your_public_key_here"
SSH_USER=ubuntu

# ============================================================================
# GitHub Secrets (stored in GitHub Actions, documented here for reference)
# ============================================================================
# These are set in GitHub repo settings -> Secrets and variables -> Actions
GITHUB_REPO=username/repo-name
GITHUB_SECRET_SSH_PRIVATE_KEY="(stored in GitHub)"
GITHUB_SECRET_INSTANCE_IP=xxx.xxx.xxx.xxx
GITHUB_SECRET_TAILSCALE_IP=100.x.x.x
GITHUB_SECRET_OCI_FINGERPRINT=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx

# GitHub Personal Access Token (if you created one for gh CLI)
# GITHUB_PAT=your_personal_access_token_here

# ============================================================================
# Spot MCP Server
# ============================================================================
SPOT_MCP_URL=http://100.x.x.x:3856/mcp
SPOT_MCP_HOST=0.0.0.0
SPOT_MCP_PORT=3855
SPOT_MCP_EXTERNAL_PORT=3856
SPOT_MCP_DOCKER_IMAGE=spot-mcp-server:latest
SPOT_MCP_CONTAINER_NAME=spot-mcp-server
SPOT_MCP_DATA_DIR=/home/ubuntu/spot-mcp-data

# Qdrant Configuration (used by Spot MCP)
QDRANT_LOCAL_PATH=/app/qdrant-data
COLLECTION_NAME=default-collection
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
RERANKER_ENABLED=true

# ============================================================================
# Tailscale
# ============================================================================
TAILSCALE_IP=100.x.x.x
TAILSCALE_NETWORK=your-network-name
# TAILSCALE_AUTH_KEY=your-tailscale-auth-key-here (if you have one for automation)

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_DIR=/path/to/.your-backup-dir
BACKUP_SOURCE_DIR=/home/ubuntu/spot-mcp-data
BACKUP_SCHEDULE="0 2 * * *"  # 2 AM daily
BACKUP_USER=ubuntu
BACKUP_HOST=100.x.x.x

# ============================================================================
# Docker Configuration
# ============================================================================
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-docker-username
# DOCKER_PASSWORD=your-docker-hub-password (if needed for private images)

# ============================================================================
# Terraform Configuration
# ============================================================================
TF_VAR_tenancy_ocid=ocid1.tenancy.oc1..your_tenancy_ocid
TF_VAR_user_ocid=ocid1.user.oc1..your_user_ocid
TF_VAR_fingerprint=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx
TF_VAR_private_key_path=/path/to/.oci/oci_api_key.pem
TF_VAR_compartment_ocid=ocid1.tenancy.oc1..your_compartment_ocid
TF_VAR_region=us-ashburn-1

# ============================================================================
# Local Development Paths
# ============================================================================
PROJECT_ROOT=/path/to/your-project
OCI_CONFIG_DIR=/path/to/.oci
CURSOR_CONFIG=/path/to/.config/Cursor/User/globalStorage/mcp.json

# ============================================================================
# Cursor IDE Configuration
# ============================================================================
CURSOR_MCP_SERVER_NAME=spot
CURSOR_MCP_AUTO_START=true
CURSOR_MCP_TAGS=spot,memory,codebase,your-project

# ============================================================================
# Notes
# ============================================================================
# - Copy this file to .env and fill in your actual values
# - NEVER commit .env to git (it's already in .gitignore)
# - Keep .env secure (chmod 600)
# - This template is safe to commit
